<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="DBConnection" type="log4net.Appender.RollingFileAppender">
    <file value="C:\log\" />
    <datePattern value="yyyy-MM-dd'_DB.log'" />
    <staticLogFileName value="false"/>
    <appendToFile value ="true" />
    <rollingStyle value="Composite" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-5level(%date{HH:mm:ss,fff}) [%thread] : %message%newline" />
    </layout>
  </appender>
  <logger name="Logger">
    <level value="Info" />
    <appender-ref ref="DBConnection" />
  </logger>
</log4net>